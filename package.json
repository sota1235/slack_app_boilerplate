{
  "name": "slack_app_boilerplate",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "16.x"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@sentry/node": "^6.13.2",
    "@sentry/tracing": "^6.13.2",
    "@slack/bolt": "^3.10.0",
    "@slack/web-api": "^6.0.0",
    "@types/jest": "^28.0.0",
    "dotenv": "^16.0.0",
    "jsx-slack": "^4.6.0",
    "source-map-support": "^0.5.20",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@sota1235/eslint-config": "^3.0.0",
    "eslint": "^8.0.0",
    "husky": "7.0.4",
    "jest": "28.1.0",
    "lint-staged": "13.0.0",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "ts-jest": "28.0.4",
    "ts-node": "^10.0.0"
  },
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "watch": "tsc -w",
    "start:dev": "NODE_ENV=development nodemon -r dotenv/config lib/index.js",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run _prettier -- -c && npm run eslint",
    "eslint": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "npm run eslint --fix",
    "_prettier": "prettier './src/**/*.{ts,tsx}'",
    "prettier": "npm run _prettier -- --write",
    "debug": "ts-node -r dotenv/config",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js",
    "start": "node lib/index.js"
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix"
    ]
  }
}
